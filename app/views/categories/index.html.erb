<h1 class="text-center">Categories</h1>
<%= will_paginate @categories, class: 'apple_pagination'%>
<% @categories.each do |category|%>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="card text-center my-3 card-shadow">
          <div class="card-body">
            <h5 class="card-title"><%= category.name %></h5>
            <%= link_to 'View', category_path(category), class: 'btn btn-sm btn-secondary' %>
          </div>
          <div class="card-footer text-muted d-flex justify-content-between align-items-center">
            <small class="mb-0">Created: <%= time_ago_in_words(category.created_at) %> ago</small>
             <small><%= pluralize(category.articles.count, "article") %></small>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= will_paginate @categories, class: 'apple_pagination'%>