


<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card text-center my-3 card-shadow">
        <div class="card-body">
          <h5 class="card-title"><%= @article.title %></h5>
          <div class="card-text text-start" style="max-width: 300px; margin: 20px auto;">
            <%= simple_format(@article.description) %>
          </div>
          <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-sm btn-success'%>
          <%= link_to 'Destroy', @article, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } %>
        </div>
        <div class="card-footer text-muted d-flex justify-content-between align-items-center">
          <small class="mb-0">By Gerardo Garcia</small>
          <small class="mb-0">Created: <%= time_ago_in_words(@article.created_at) %> ago | Updated: <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>
