<%= render "shared/errors", obj: @article %>
<%= form_with(model: article) do |form| %>
  <div class="form-group row justify-content-center align-items-center mt-3">
    <div class="col-md-8">
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Title of article"  %>
        <div class="form-text">
          It cannot be less than 5 characters
        </div>
      </div>
      <div class="mb-3">
        <%= form.label :description, class: "form-label"%>
        <%= form.text_area :description, rows: 10,  class: "form-control", placeholder: "Description of article"%>
        <div class="form-text">
          It cannot be less than 10 characters
        </div>
      </div>
      <div class="mb-3">
        <%= form.label :category, class: "form-label" %>
        <%= form.collection_select(:category_ids, Category.all, :id, :name,  {:prompt => ""}, {:multiple => true, class: "form-select"}) %>
        <div class="form-text">
          Make your selection from the list above (can be empty)
        </div>
      </div>
      <div class="mb-3">
        <%= form.submit class: "btn btn-primary"%>
        <%= link_to 'Back', articles_path, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
<% end %>
