


<div class="container fill">
  <div class="row justify-content-center align-items-center">
    <div class="col-lg-6 align-self-center">
      <div class="card my-3 card-shadow">
        <div class="card-body h-100">
          <div class="d-flex align-items-center justify-content-between flex-wrap">
            <div class="header-container">
              <h3 class="card-title mb-0"><%= @article.title %></h3>
              <% if @article.categories.any? %>
                <%= render @article.categories %>
              <% end %>
            </div>
            <div class="button-container">
              <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
              <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-sm btn-success'%>
              <%= link_to 'Destroy', @article, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } %>
              <% end %>
            </div>
          </div>
          <div class="card-text text-start py-4">
            <%= simple_format(@article.description) %>
          </div>
          <div class="mt-3 text-end">
            <span class="badge bg-light text-dark px-2 py-2">
              <div class="d-flex flex-row align-items-center">
                <%= link_to gravatar_for(@article.user, size: 30), user_path(@article.user) %>
                <p class="mb-0 ms-2"><%= @article.user.username %></p>
              </div>
            </span>
          </div>
        </div>
        <div class="card-footer text-muted d-flex justify-content-end align-items-center">
          <small class="mb-0 ms-2 text-muted">Created: <%= time_ago_in_words(@article.created_at) %> ago | Updated: <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>
